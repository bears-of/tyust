/* index.wxss */
page {
  /* 使用干净的浅灰色作为页面背景 */
  background-color: #f5f7fa; 
}

.container {
  padding: 30rpx; /* 增加整体内边距 */
}

/* === 顶部操作栏 Header - 统一为白色卡片 === */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  /* 统一将操作栏放在一个白色卡片内 */
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05); /* 增加轻微阴影提升质感 */
  padding: 8rpx 20rpx;
  height: auto; 
}

/* 成绩类型切换 */
.score-types {
  width: 350rpx; 
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx; 
}

.score-type {
  flex: 1; 
  height: 64rpx; 
  border-radius: 12rpx; 
  background: #e9e9e9; /* 浅灰色背景 */
  box-shadow: none; 
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx; 
  color: #666;
  margin: 0 5rpx;
  transition: all 0.2s;
}

.score-type.active {
  /* 现代蓝绿渐变主色 */
  background: linear-gradient(90deg, #1fa2ff 0%, #12d8fa 100%); 
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 4rpx 10rpx rgba(31, 162, 255, 0.3);
}

/* 学期选择 */
.score-term {
  flex: 1;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end; /* 靠右对齐 */
  font-size: 28rpx;
  color: #3b3b3b;
}

.score-term picker {
  width: 100%;
}

.term-picker-content {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.score-term text {
  margin-left: 8rpx;
  font-size: 24rpx;
}

/* 刷新按钮 */
.update-btn {
  width: 80rpx; 
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: #1fa2ff; /* 刷新按钮使用主色 */
  margin-left: 10rpx;
}

/* 刷新动画 */
@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.spin {
  animation: spin 1s linear infinite;
}


/* === 成绩列表 Score List - 白色卡片 === */

.score-list {
  width: 100%;
  border-radius: 20rpx;
  background: #ffffff; 
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-top: 0;
  padding: 30rpx;
  overflow: hidden; 
}

.term-name {
  font-size: 34rpx;
  color: #333333;
  text-align: left; /* 左对齐 */
  font-weight: 700;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.list {
  margin-top: 20rpx;
}

.score-item {
  display: flex;
  align-items: flex-start; 
  justify-content: space-between;
  min-height: 80rpx; 
  padding: 20rpx 0; 
  margin-top: 0;
}

.score-item:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0; 
}

.course-name {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

/* 原始成绩详情 */
.raw-score__content {
  margin-top: 8rpx;
  font-weight: 400;
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
}

.raw-score__content text {
  margin-right: 20rpx; /* 增加小项间距 */
  display: inline-block;
}

/* 最终分数显示 */
.course-score {
  width: 120rpx; 
  text-align: right;
  font-size: 36rpx; 
  color: #1fa2ff; /* 默认使用主色（蓝色） */
  font-weight: 700;
}

.course-score.fail {
  color: #ff6b6b; /* 失败使用醒目的红色 */
}

/* 列表为空时的提示 */
.empty-list-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}