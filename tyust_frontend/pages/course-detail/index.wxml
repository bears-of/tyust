<cu-custom bgColor="bg-white" isBack="{{true}}">
  <view slot="content">课程详情</view>
</cu-custom>

<view class="page-container">
  <view class="header-bg"></view>

  <view class="content-wrapper">
    <view class="main-card">
      
      <view class="card-header">
        <view class="course-title">{{info.name}}</view>
        <view class="header-meta">
           <text class="meta-text">{{info.category}}</text>
           <text class="divider">|</text>
           <text class="meta-text">{{info.method}}</text>
        </view>
      </view>

      <view class="stats-grid">
        <view class="stat-item">
          <view class="stat-value">{{info.credit}}</view>
          <view class="stat-label">学分</view>
        </view>
        <view class="stat-divider"></view>
        <view class="stat-item">
          <view class="stat-value">{{info.rawWeeks}}</view>
          <view class="stat-label">周数</view>
        </view>
        <view class="stat-divider"></view>
        <view class="stat-item">
          <view class="stat-value">{{info.rawSection}}</view>
          <view class="stat-label">节次</view>
        </view>
      </view>

      <view class="detail-list">
        
        <view class="detail-item">
          <view class="icon-box icon-bg-blue">
            <text class="cuIcon-peoplefill text-white"></text>
          </view>
          <view class="detail-content">
            <view class="detail-label">授课教师</view>
            <view class="detail-text">{{info.teacher}}</view>
          </view>
        </view>

        <view class="detail-item">
          <view class="icon-box icon-bg-green">
            <text class="cuIcon-locationfill text-white"></text>
          </view>
          <view class="detail-content">
            <view class="detail-label">上课地点</view>
            <view class="detail-text">{{info.address || '未知地点'}}</view>
          </view>
        </view>

        <view class="detail-item">
          <view class="icon-box icon-bg-orange">
             <text class="cuIcon-read text-white"></text>
          </view>
          <view class="detail-content">
            <view class="detail-label">课程类型</view>
            <view class="detail-text">{{info.category}}</view>
          </view>
        </view>

        <view class="detail-item">
          <view class="icon-box icon-bg-purple">
             <text class="cuIcon-edit text-white"></text>
          </view>
          <view class="detail-content">
            <view class="detail-label">考查方式</view>
            <view class="detail-text">{{info.method}}</view>
          </view>
        </view>

      </view>
    </view>
  </view>
</view>