page {
  background-color: #f0f2f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', sans-serif;
}

.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

/* === 顶部背景 === */
.bg-header {
  height: 450rpx;
  width: 100%;
  /* 现代科技蓝渐变 */
  background: linear-gradient(135deg, #0072ff 0%, #00c6ff 100%);
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  position: relative;
  padding: 80rpx 40rpx;
  box-sizing: border-box;
}

/* 背景纹理 (Logo淡化) */
.bg-shape {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 300rpx;
  height: 300rpx;
  opacity: 0.1;
  transform: rotate(15deg);
}

.welcome-text {
  position: relative;
  z-index: 2;
  color: #fff;
  margin-top: 40rpx;
}

.title {
  font-size: 56rpx;
  font-weight: 800;
  letter-spacing: 2rpx;
  margin-bottom: 10rpx;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.sub-title {
  font-size: 28rpx;
  opacity: 0.9;
  letter-spacing: 4rpx;
  font-weight: 300;
}

/* === 悬浮卡片 === */
.login-card {
  margin: -100rpx 40rpx 0 40rpx; /* 向上偏移，产生悬浮感 */
  background: #ffffff;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 10;
}

.card-header {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}

.logo-img {
  width: 140rpx;
  height: 140rpx;
  /* border-radius: 50%; 如果logo是方的想要圆形背景取消注释 */ 
}

/* === 输入框样式 === */
.input-item {
  display: flex;
  align-items: center;
  background-color: #f7f8fa;
  height: 100rpx;
  border-radius: 50rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

/* 激活状态（聚焦或有内容） */
.input-item.active,
.input-item:hover {
  background-color: #fff;
  border-color: #0072ff;
  box-shadow: 0 4rpx 20rpx rgba(0, 114, 255, 0.1);
}

.icon-wrap {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.icon-wrap image {
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

/* 选中时图标变亮 */
.input-item.active .icon-wrap image {
  opacity: 1;
}

input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #333;
}

.input-placeholder {
  color: #c0c4cc;
}

/* 密码显示的眼睛区域 */
.eye-icon {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

/* === 记住密码复选框 === */
.remember-line {
  display: flex;
  align-items: center;
  margin-bottom: 60rpx;
  padding-left: 10rpx;
}

.check-box {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.check-box.checked {
  background-color: #0072ff;
  border-color: #0072ff;
}

.check-mark {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.remember-text {
  font-size: 26rpx;
  color: #666;
}

/* === 登录按钮 === */
.login-btn {
  width: 100% !important;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(90deg, #00c6ff 0%, #0072ff 100%);
  border-radius: 50rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  padding: 0;
  margin: 0;
  box-shadow: 0 12rpx 30rpx rgba(0, 114, 255, 0.3);
  transition: transform 0.1s;
}

.btn-hover {
  transform: scale(0.98);
  opacity: 0.9;
}

/* === 底部版权 === */
.footer-text {
  position: absolute;
  bottom: 40rpx;
  width: 100%;
  text-align: center;
  color: #ccc;
  font-size: 22rpx;
}